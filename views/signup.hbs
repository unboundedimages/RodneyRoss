<div class="scroll">
	<div class="name" title=" Click here scroll down with your arrow keys to see the rest of the log in screen or press tab"><div id= "big_C">Create a Login</div>
</div>
<div class="clear"></div>
<form action="signup" method="post" id="signUp">
	<input id="names1" class= "names" type="text" name="firstname" placeholder="First Name" title="Enter your first name" id="firstName" onkeydown="return alphaOnly(event);" {{!-- pattern="[^0-9]+[^,./]+[{}]+[-=]+[`]+" --}} title="Invalid input" onCopy="return false" onDrag="return false" onPaste="return false" autocomplete=off onDrop="return false" >
	<input id="names2" type="text" name="lastname" placeholder="Last Name" title="Enter your last name" id="lastName" onkeydown="return alphaOnly(event);" onCopy="return false" onDrag="return false" onPaste="return false" autocomplete=off onDrop="return false" class= "names"><p>
		<!-- <input class = "names" type="text" name="Last Name" placeholder="Last Name" title="Enter your last name" id="lastName" onkeydown="return alphaOnly(event);" onCopy="return false" onDrag="return false" onPaste="return false" autocomplete=off onDrop="return false"><p> -->	
			<input id="names3" type="email" name="email" placeholder="email address" title="Enter a valid email address" id="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" onCopy="return false" onDrag="return false" onPaste="return false" autocomplete=off onDrop="return false" class= "names">
			<input id="names4" type="password" name="password" placeholder="password" pattern=".{7,}" title="Must contain at least 7 characters or more" id="pw" onCopy="return false" onDrag="return false" onPaste="return false" autocomplete=off onDrop="return false" class= "names">
			<p class="how">How did you hear about me:</p>
			{{!-- <h2 class="how">How did you hear about me:</h2> --}}
			<textarea name="comment" rows="10" cols="45" placeholder="How did you hear about me?" onCopy="return false" onDrag="return false" onPaste="return false" autocomplete=off onDrop="return false" form="signUp"></textarea>
			<p>
				<button id="loginC" class="inside_drpdown_btn" type="submit" value="Submit">
					ENTER
				</button>	
			</p>
		</p>
	</form>
</div>	
